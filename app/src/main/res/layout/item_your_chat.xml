<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="70dp"
    android:layout_marginTop="8dp"
    >

    <ImageView
        android:id="@+id/iv_yourimg"
        android:layout_width="35dp"
        android:layout_height="34dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_yourname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="딸기"
        android:layout_marginBottom="4dp"
        android:textColor="#8C8C8C"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_yourcontent"
        app:layout_constraintStart_toStartOf="@+id/tv_yourcontent" />

    <TextView
        android:id="@+id/tv_yourcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:background="@drawable/chatting_your_chat"
        android:gravity="center_vertical"
        android:maxWidth="270dp"
        android:padding="10dp"
        android:text="안녕하세요 !"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_yourimg" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 09:20"
        android:textColor="#8C8C8C"
        android:textSize="10sp"


        app:layout_constraintBottom_toBottomOf="@+id/tv_yourcontent"
        app:layout_constraintStart_toEndOf="@+id/tv_yourcontent" />



</androidx.constraintlayout.widget.ConstraintLayout>