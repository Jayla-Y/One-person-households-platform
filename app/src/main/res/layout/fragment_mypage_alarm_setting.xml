<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.mypage.MypageAlarmSettingFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/btn_mypage_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="147dp"
        android:layout_height="27dp"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="109dp"
        android:text="알람설정"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal|top"
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_mypage_dividebox_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_communityalarm"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="커뮤니티 게시판"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_line"
        />

    <Switch
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="296dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_line" />


    <TextView
        android:id="@+id/tv_groupbuyingalarm"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="공동구매 게시판"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_communityalarm"
        />

    <Switch
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="296dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_communityalarm" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>