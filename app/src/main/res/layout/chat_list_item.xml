<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"

    >

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C4C4C4"
        app:layout_constraintBottom_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="15dp"

        >
    <TextView
        android:id="@+id/tv_chatpartner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사과"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="3분전"
        android:textColor="#8C8C8C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chatpartner"
        app:layout_constraintStart_toEndOf="@+id/tv_chatpartner" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정확한 위치가 어딘지 알 수 있을까요?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_chatpartner" />

        <TextView
            android:id="@+id/tv_chattitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목: 가좌동에 새로 생긴 냉면집 오픈 특가로 7월 5일 단.."
            android:textColor="#8C8C8C"
            android:textSize="10sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content" />

        <TextView
            android:id="@+id/tv_chatcount"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:background="@drawable/btn_write"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>